{
  "compilerOptions": {
    "target": "es2016",
    "module": "umd",
    "outDir": "./dist",
    "moduleResolution": "node",
    "incremental": false,
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "ESNext",
      "DOM",
      "es7"
    ],
    "declaration": false,
    "esModuleInterop": true
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "./test/**/*.ts",
    "build.ts"
  ],
}