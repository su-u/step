{
  "compilerOptions": {
    "target": "es2016",
    "module": "umd",
    "moduleResolution": "node",
    "incremental": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "ESNext",
      "DOM",
      "es7"
    ],
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": ".",
    "outDir": "./public/dist",
    "strict": true,
    "removeComments": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
  },
  "exclude": [
    "./**/*.test.ts",
    "./build.ts"
  ]
}