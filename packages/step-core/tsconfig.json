{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outFile": "./dist/bundle.d.ts",
    "moduleResolution": "node",
    "incremental": false,
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "ESNext",
      "DOM",
      "es7"
    ],
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "./test/**/*.ts",
    "build.ts"
  ],
}