{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "removeComments": true,
    "incremental": true,
    "baseUrl": ".",
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types", "packages/**/node_modules/@types"],
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "lib": ["ESNext", "DOM", "es7"]
  },
  "include": [
    "./packages/**/*.ts",
  ]
}